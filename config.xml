<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.mmcclintock.physgap"
        version     = "1.2.0"
        versionCode = "1.2.0">

    <name>PhysGap</name>

    <description>
        Trial PhoneGap application that allows first year physics students to view some sample "mobile based" material.
    </description>

    <author email="michael.ross.mcclintock@gmail.com">
        Michael McClintock
    </author>

    <preference name="phonegap-version" value="2.0.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="permissions"      value="none" />

    <icon src="icon.png" width="128" height="128" />

</widget>
